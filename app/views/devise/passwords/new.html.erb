<%= render "devise/shared/auth_module_header", title: "Forgot your password? (or haven't set it yet?)" %>

<% resource.skip_field_error_wrapper = true %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: {class: "ui large form"}) do |f| %>
  <div class="ui stacked segment">
    <%= devise_error_messages! %>

    <div class="field">
      <div class="ui left icon input">
        <i class="user icon"></i>
        <%= f.email_field :email, autofocus: true, placeholder: "email" %>
      </div>
    </div>

    <%= f.submit "Send me reset password email", class: "ui fluid large teal submit button" %>
  </div>
<% end %>

<div class="ui message">
  <%= render "devise/shared/links" %>
</div>
