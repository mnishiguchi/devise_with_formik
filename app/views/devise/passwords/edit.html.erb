<%= render "devise/shared/auth_module_header", title: "Change password" %>

<% resource.skip_field_error_wrapper = true %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, html: {class: "ui large form"}) do |f| %>
  <div class="ui stacked segment">
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <div class="ui left icon input">
        <i class="lock icon"></i>
        <%= f.password_field :password, autocomplete: "off", placeholder: @minimum_password_length ? "new password (#{@minimum_password_length} characters minimum)" : "new password" %>
      </div>
    </div>

    <div class="field">
      <div class="ui left icon input">
        <i class="lock icon"></i>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "new password confirmation" %>
      </div>
    </div>

    <%= f.submit "Change my password", class: "ui fluid large teal submit button" %>
  </div>
<% end %>

<div class="ui message">
  <%= render "devise/shared/links" %>
</div>
